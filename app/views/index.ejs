<%- include ('partials/_header'); %>
<script type="text/javascript" src="/javascripts/index.js"></script>
<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form name="submit_message" action="/add" method="post">
                        <div class="form-group">
                            <h4 class="section-title">Insert Message</h4>
                        </div>
                        <div class="form-group">
                            <textarea maxlength='50' name="message" cols="80" placeholder="Max Lenght 50 characters"
                                class="form-control"></textarea>
                            <div class="alert alert-danger" style="margin-top: 22px">
                                <button type="button" class="close" data-dismiss="alert">x</button>
                                <span id="danger-message"></span>
                            </div>
                            <div class="alert alert-success" style="margin-top: 22px">
                                <button type="button" class="close" data-dismiss="alert">x</button>
                                <span id="success-message"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" id='bAdd' class="btn btn-success btn-block btn-action">Add</button>
                            <button type="button" id="bChkIntegrity" class="btn btn-warning btn-block btn-action">Check Integrity</button>
                            <button type="button" id="bRecalcNonces"
                                class="btn btn-danger btn-block btn-action">Recalculate Nonces</button>
                        </div>
                    </form>
                </div>
                <!-- LIST -->
                <div class="col-md-12 mt-2" id="entries-container"></div>
            </div>
        </div>
        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document" hashEdit="default">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="form-group">
                            <h4 class="section-title">Edit Message</h4>
                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form name="submit_message" action="/edit" method="post">
                            <div class="form-group">
                                <textarea maxlength='50' id="messageEdit" name="messageEdit" cols="80" placeholder="Max Lenght 50 characters"
                                    class="form-control"></textarea>
                                <div class="alert alert-danger" style="margin-top: 22px">
                                    <button type="button" class="close" data-dismiss="alert">x</button>
                                    <strong id="danger-strong">Error! </strong> <span id="danger-message"></span>
                                </div>

                            </div>
                    </div>
                    <div class="modal-footer">                        
                        <button type="submit" id='bEdit' class="btn btn-success" data-dismiss="modal">Save changes</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>                            
                    </div>
                </div>
            </div>
        </div>

        <%- include ('partials/_footer'); %>